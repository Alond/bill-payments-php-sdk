{
    "name": "qiwi/bill-payments-php-sdk",
    "type": "library",
    "version": "1.0.1",
    "description": "Universal payments API SDK",
    "license": "MIT",
    "homepage": "https://github.com/QIWI-API/bill-payments-php-sdk",
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/Seldaek/monolog"
        }
    ],
    "support": {
        "issues": "https://github.com/QIWI-API/bill-payments-php-sdk/issues"
    },
    "require": {
        "php": ">=5.5.0",
        "ext-curl": "*",
        "ext-json": "*",
        "curl/curl": "^1.9",
        "ramsey/uuid": "^3.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.3",
        "phpdocumentor/phpdocumentor": "^2.9"
    },
	"autoload": {
        "psr-4": {
            "Qiwi\\Api\\": "src/"
        }
	},
	"autoload-dev": {
		"psr-4": {
            "Qiwi\\Api\\": "tests/"
        }
	},
    "config": {
        "github-protocols": ["https"]
    },
    "scripts": {
        "test": "phpunit --verbose",
        "docs": "phpdoc run --verbose"
    }
}
